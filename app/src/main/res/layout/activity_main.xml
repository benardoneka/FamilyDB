<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/famapp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To FamApp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:layout_below="@+id/header_title"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/menu_items"
        android:layout_below="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/family_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_items"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/family_tree" />


    <TextView
        android:id="@+id/familyTree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_tree"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="-3dp"
        android:text="Enter Family names"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/reporting"
        android:layout_width="wrap_content"
        android:layout_height="131dp"
        android:layout_below="@id/menu_items"
        android:layout_alignRight="@+id/family_tree"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="-196dp"
        android:background="@drawable/police" />


    <TextView
        android:id="@+id/reportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reporting"
        android:layout_alignRight="@+id/familyTree"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="47dp"
        android:text="Report Your case"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/feedback"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_tree"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="83dp"
        android:background="@drawable/feedback" />

    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedback"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-3dp"
        android:text="Talk to Us"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <ImageButton
        android:id="@+id/beta"
        android:layout_width="wrap_content"
        android:layout_height="119dp"
        android:layout_below="@id/reporting"
        android:layout_alignRight="@+id/family_tree"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="-198dp"
        android:background="@drawable/beta" />

    <TextView
        android:id="@+id/betaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/beta"
        android:layout_alignRight="@+id/familyTree"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="47dp"
        android:text="Learn From Cases"
        android:textColor="@color/black"
        android:textSize="15sp" />

</RelativeLayout>